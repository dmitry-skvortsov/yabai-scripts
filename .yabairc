#!/usr/bin/env sh
export PATH="/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin"

YABAI="${YABAI:-/opt/homebrew/bin/yabai}"
STATE_DIR="${STATE_DIR:-/tmp/yabai_agent}"
mkdir -p "$STATE_DIR"
SA_BOOTSTRAP_FILE="$STATE_DIR/sa_bootstrap_attempted"

maybe_load_sa_bootstrap() {
  [ -f "$SA_BOOTSTRAP_FILE" ] && return 0
  sudo "$YABAI" --load-sa >/dev/null 2>&1 || true
  : > "$SA_BOOTSTRAP_FILE"
}

# scripting addition
# (одноразовая попытка на этот runtime)
maybe_load_sa_bootstrap

# rules
"$YABAI" -m rule --remove all >/dev/null 2>&1 || true
"$YABAI" -m rule --add app="^System Settings$" manage=off
"$YABAI" -m rule --add app="^Reverso$" manage=off
"$YABAI" -m rule --add app="^Music$" manage=off
"$YABAI" -m rule --add app="^DaisyDisk$" manage=off
"$YABAI" -m rule --add app="^App Store$" manage=off

# config
"$YABAI" -m config \
  external_bar off:40:0 \
  menubar_opacity 1.0 \
  mouse_follows_focus off \
  focus_follows_mouse off \
  display_arrangement_order default \
  window_origin_display default \
  window_placement second_child \
  window_zoom_persist on \
  window_shadow on \
  window_animation_duration 0.0 \
  window_animation_easing ease_out_circ \
  window_opacity_duration 0.0 \
  active_window_opacity 1.0 \
  normal_window_opacity 0.8 \
  window_opacity on \
  insert_feedback_color 0xffd75f5f \
  split_ratio 0.50 \
  split_type auto \
  auto_balance off \
  top_padding 3 \
  bottom_padding 5 \
  left_padding 5 \
  right_padding 5 \
  window_gap 5 \
  layout bsp \
  mouse_modifier fn \
  mouse_action1 move \
  mouse_action2 resize \
  mouse_drop_action swap

# borders: стартуем один раз (без --reload по умолчанию)
"$HOME/.config/yabai/bordersctl.sh" ensure >/dev/null 2>&1 || true

# наш демон (если уже запущен — он сам выйдет)
"$HOME/.config/yabai/yabai-agent.sh" start >/dev/null 2>&1 || true

echo "yabai loaded"
